// Top-Level Variables
$background-color					= #e8e8e8
$theme-color							= #b90504
$text-color								= #333333

// Social Buttons Variables
$panel-background-color		= #f6f6f6
$socail-icon-background		=	#205D7A
$social-icon-color				= #fff
$facebook-background			= #3b5998
$twitter-background				= #00aced
$linkedin-background			= #007bb5
$google-background				= #dd4b39

body
	background-color $background-color

a,a:hover,a:focus
	color $theme-color
	text-decoration none

#custom-bootstrap-header-row
	&.row
		background-color $panel-background-color
		margin 0

#custom-bootstrap-menu
	&.navbar-default
		.navbar-nav
			width 100%
			text-align center
			& > li
				float none
				display inline-block
				& > a
					color $text-color

#custom-bootstrap-menu.navbar-default .navbar-nav > li > a:hover,
#custom-bootstrap-menu.navbar-default .navbar-nav > li > a:focus
	color $theme-color

#custom-bootstrap-menu.navbar-default .navbar-nav>.active>a,
#custom-bootstrap-menu.navbar-default .navbar-nav>.active>a:focus,
#custom-bootstrap-menu.navbar-default .navbar-nav>.active>a:hover
	color $theme-color
	background-color $panel-background-color

.panel
	padding 0 25px 10px
	background-color $panel-background-color

hr
	border: none;
	height: 2px;
	background-color: $background-color; /* Modern Browsers */

.list-social
	margin-top 10px
	padding 0
	overflow auto

.list-item-social
	list-style-type none
	float left

.fa-social-icon
	background $socail-icon-background
	color $social-icon-color
	width 35px
	height 35px
	border-radius 20px
	font-size 23px
	text-align center
	margin-right 15px
	padding-top 15%
	transition all 0.2s ease-in-out
	&:hover
		opacity .8

.fa-facebook
	background $facebook-background

.fa-linkedin
	background $linkedin-background

.fa-twitter
	background $twitter-background

.fa-google-plus
	background $google-background
