extends layout

block content
	h1 Add Post
	p Please register with the form below
	form(method='post', action='/posts', enctype='multipart/form-data')
		.form-group
			label Title
			.row
				.col-sm-9
					input.form-control(name='title', type='text', placeholder='Enter Post TItle',required)
		.form-group
			label Category
			.row
				.col-sm-5
					select.form-control(name='category', required)
						option(value='' selected disabled) Select Category
						each category, i in categories
							option(value='#{category.name}') #{category.name}
		.form-group
			label Category Home Page
			.radio
				label
					input(type='radio', name='homePage', value='false', checked)
					| No
			.radio
				label
					input(type='radio', name='homePage', value='true')
					| Yes
		.form-group
			label Lead
			textarea.form-control(id='lead', name='lead', placeholder='Enter Post Lead Paragraph', required)
		.form-group
			label Description
			textarea.form-control(name='description', placeholder='Enter Post Description',required)
		.form-group
			label Content
			textarea.form-control(id='content', name='content', required)
		.form-group
			label Cover Image
			input.form-control(name='coverImage', type='file')
		.form-group
			label Cover Image Alt
			.row
				.col-sm-9
					input.form-control(name='coverImageAlt', type='text')
		.form-group
			label Thumbnail Image
			input.form-control(name='thumbnailImage', type='file')
		.form-group
			label Thumbnail Image Alt
			.row
				.col-sm-9
					input.form-control(name='thumbnailImageAlt', type='text')
		input.btn.btn-default(name='submit', type='submit', value='Add')
		script(src='/ckeditor/ckeditor.js')
		script
			| CKEDITOR.replace('content');
